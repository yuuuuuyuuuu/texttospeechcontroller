<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
   
   <!-- pressed -->
   <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
               <solid android:color="@color/color_background_light_gray"/>
               <stroke android:width="1dp" android:color="@color/color_background_light_gray" />
        </shape>
   </item> 
   
   <!-- default -->
   <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle">
               <solid android:color="@color/color_background_dark_gray"/>
               <stroke android:width="1dp" android:color="@color/color_background_dark_gray" />
        </shape>
   </item> 

</selector>

